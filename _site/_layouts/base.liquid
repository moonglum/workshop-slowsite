<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>TWNSND Workshop Slow Site</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <script>performance.mark("head_start")</script>

    {% if product %}
      <link rel="canonical" href="/products/{{ product.slug }}/" />
    {% endif %}

    <script src="https://twnsnd-slowsite-reviews.netlify.app/reviews.js" defer></script>
    <script src="https://unpkg.com/lazysizes@5.3.2/lazysizes.js" async></script>
    <script src="/scripts/cookies.js" type="module"></script>

    <style>{% include "styles/fonts.css" %}</style>
    <style>{% include "styles/reset.css" %}</style>
    <style>{% include "styles/global.css" %}</style>
    <style>{% include "styles/cookies.css" %}</style>

    {% if product %}
      <style>{% include "styles/product-detail-page.css" %}</style>
    {% else %}
      <style>{% include "styles/homepage.css" %}</style>
    {% endif %}

    <link rel="preload" as="image" href="/images/product-image-1-preview.jpg?width=100" />

    <meta name="robots" content="noindex,nofollow" />
    <meta name="description" content="A purposefully slow website for educational purposes">

    <script>performance.mark("head_end");performance.measure("head_duration", "head_start", "head_end")</script>
  </head>

  <body>
    <link rel="preload" as="font" type="font/woff2" href="/fonts/dm-serif-display/DMSerifDisplay-Regular.woff2" crossorigin />
    <link rel="preload" as="font" type="font/woff2" href="/fonts/inter-variable/Inter-Variable-Latin.woff2" crossorigin />

    <h1 class="logo">
      <a href="/"><img src="/images/logo.svg" width="482" height="119" fetchpriority="high" alt="Relic Seeker" elementtiming="logo" /></a>
    </h1>

    {{ content }}

    <div class="cookies" id="cookie-wrapper">
    </div>
  </body>

  <!-- Debug
  <link rel="stylesheet" href="/styles/ct.css" />
  -->
</html>
